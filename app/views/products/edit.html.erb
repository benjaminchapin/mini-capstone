<h1>Edit <%= @product.name %> Product</h1>

<form action="/products/<%= @product.id %>" method="patch">
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Supplier Name: <input type="text" name="supplier_name" value="<%= @product.supplier.name %>">
  </div>
  <div>
    Images: <input type="text" name="images" value="<%= @product.images %>">
  </div>
   <input type="submit" value="Update Product">
</form>